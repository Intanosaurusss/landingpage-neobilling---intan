js navbar :

<script>
    document.addEventListener('DOMContentLoaded', function () {
      const menuToggle = document.getElementById('menu-toggle');
      const menu = document.getElementById('hs-navbar-hcail');
      const openIcon = menuToggle.querySelector('.hs-collapse-open\\:hidden');
      const closeIcon = menuToggle.querySelector('.hs-collapse-open\\:block');
    
      menuToggle.addEventListener('click', function () {
        if (window.innerWidth < 768) {
          if (menu.classList.contains('hidden')) {
            menu.classList.remove('hidden');
            menu.style.maxHeight = menu.scrollHeight + 'px';
            menu.classList.add('bg-orange-300');
          } else {
            menu.style.maxHeight = '0px';
            setTimeout(() => {
              menu.classList.add('hidden');
            }, 300);
          }
          openIcon.classList.toggle('hidden');
          closeIcon.classList.toggle('hidden');
        }
      });
    
      window.addEventListener('resize', function () {
        if (window.innerWidth >= 768) {
          menu.style.maxHeight = 'none';
          menu.classList.remove('hidden');
          menu.classList.remove('bg-orange-300');
          openIcon.classList.remove('hidden');
          closeIcon.classList.add('block');
        }
      });
    
      function updateActiveMenuOnScroll() {
        const sections = document.querySelectorAll('section');
        const menuItems = document.querySelectorAll('#hs-navbar-hcail a');
        let index = sections.length;
    
        while (--index && window.scrollY + (window.innerHeight / 2) < sections[index].offsetTop) {}
    
        menuItems.forEach(item => {
          item.classList.remove('border-b-2', 'border-orange-500');
        });
    
        if (index >= 0) {
          const id = sections[index].id;
          const activeMenu = document.querySelector(`#hs-navbar-hcail a[href="#${id}"]`);
          if (activeMenu) {
            activeMenu.classList.add('border-b-2', 'border-orange-500');
          }
        }
      }
    
      function updateActiveMenuOnLoad() {
        const currentUrl = window.location.hash.substring(1) || 'home'; // Default to 'home' if no hash
        const menuItems = document.querySelectorAll('#hs-navbar-hcail a');
        
        menuItems.forEach(item => {
          item.classList.remove('border-b-2', 'border-orange-500');
        });
    
        if (currentUrl) {
          const activeMenu = document.querySelector(`#hs-navbar-hcail a[href="#${currentUrl}"]`);
          if (activeMenu) {
            activeMenu.classList.add('border-b-2', 'border-orange-500');
          }
        }
      }
    
      window.addEventListener('scroll', updateActiveMenuOnScroll);
      window.addEventListener('popstate', updateActiveMenuOnLoad);
      window.addEventListener('hashchange', updateActiveMenuOnLoad);
      updateActiveMenuOnLoad(); // Initial check on load
    
    });
    </script>
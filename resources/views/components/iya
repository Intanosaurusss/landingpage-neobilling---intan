document.addEventListener('DOMContentLoaded', function () {
  const menuToggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('hs-navbar-hcail');
  const openIcon = menuToggle.querySelector('.hs-collapse-open\\:hidden');
  const closeIcon = menuToggle.querySelector('.hs-collapse-open\\:block');

  menuToggle.addEventListener('click', function () {
    // Cek apakah ukuran layar lebih besar dari md (768px)
    if (window.innerWidth < 768) {
      // Toggle height and background for smooth opening/closing
      if (menu.classList.contains('hidden')) {
        menu.classList.remove('hidden');
        menu.style.maxHeight = menu.scrollHeight + 'px';  // Set height to content height
        menu.classList.add('bg-orange-300'); // Add background color for dropdown
      } else {
        menu.style.maxHeight = '0px';  // Collapse menu
        menu.classList.remove('bg-blue-500'); // Remove background color
        setTimeout(() => {
          menu.classList.add('hidden');  // Hide after transition
        }, 300);  // Matches the duration in Tailwind (300ms)
      }
      
      // Toggle icon
      openIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
    }
  });

  // Reset style when resizing the window to large size
  window.addEventListener('resize', function () {
    if (window.innerWidth >= 768) {
      menu.style.maxHeight = 'none'; // Reset max-height
      menu.classList.remove('hidden'); // Make sure menu is visible on large screens
      menu.classList.remove('bg-blue-500'); // Ensure background color is removed on large screens
      openIcon.classList.remove('hidden'); // Reset to open icon
      closeIcon.classList.add('hidden');  // Reset to closed icon
    }
  });
});


/** @type {import('tailwindcss').Config} */
export default {
  content: [
    "./resources/**/*.blade.php",
    "./resources/**/*.js",
    "./resources/**/*.vue",
  ],
  theme: {
    extend: {
      keyframes: {
        'custom-bounce': {
          '0%, 100%': { transform: 'translateY(0)' },
          '50%': { transform: 'translateY(-20px)' }, // Atur nilai agar tidak terlalu tinggi
        },
        'fade-up': {
          '0%': { transform: 'translateY(100%)', opacity: '0' },
          '100%': { transform: 'translateY(0)', opacity: '1' },
        },
      },
      animation: {
        'bounce-slow': 'custom-bounce 10s ease-in-out infinite',
        'fade-up': 'fade-up 2s ease-out forwards',
      },
      duration: {
        '10000': '10000ms', // Tambahkan durasi 10 detik
      },
    },
  },
  plugins: [],
}





